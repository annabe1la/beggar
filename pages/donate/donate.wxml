<!--pages/donate/donate.wxml-->
<view class="container">

    <view wx:if="{{isLike==true}}" class="sweetHeart" bindtap="onClick">❤️</view>
    <view wx:else class="sweetHeart" bindtap="onClick">💚</view>
    <view class="question">你喜欢我吗？</view>
    <radio-group class="radio-group" bindchange="onChange">
        <radio class="radio" value="0">喜欢</radio>
        <radio class="radio" value="1" checked='true'>不喜欢</radio>
    </radio-group>
    <view wx:if="{{isLike==true}}">给钱谢谢!</view>
    <view wx:else class="">再见！</view>
    <!-- <view wx:for="{{heartList}}" class="tinyheart"></view> -->

</view>