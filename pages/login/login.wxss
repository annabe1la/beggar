/* pages/login/login.wxss */
.container {
  padding: 0;
}

.bg {
  position: fixed;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.login-wrapper {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: fixed;
}

.login-sub-wrapper {
  width: 250px;
  height: 300px;
  background-color: rgba(256, 256, 256, 0.7);
  border-radius: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.avatar {
  width: 100px;
  height: 100px;
  margin-top: 100rpx;
  margin-bottom: 90rpx;
  border-radius: 50%;
  box-shadow: 0, 0, 10px, 10px, rgba(2, 256, 256, 0.7);
}

.login {
  width: 120px;
  height: 40px;
  background-color: rgba(79, 56, 178,0.7);
  border-radius: 20px;
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
  text-align: center;

}

.btn {
  width: 120px;
  height: 40px;
  background-color: rgba(79, 56, 178,0.7);
  border-radius: 20px;
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
  text-align: center;

}