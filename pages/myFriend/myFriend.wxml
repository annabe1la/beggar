        <view class="eyebrow eyebrow-l"></view>
        <view class="flush flush-r"></view>
        <view class="flush flush-l"></view>
    </view>
</view>
<view class="inputBox">
    <input bindinput="watchWords" class="input" placeholder='只许写3个字' value="{{value}}" maxlength="3" bindconfirm="onShow" focus='true'></input>
</view>
